        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="MBR"/>
            <TextField text="0x0000"/>
            <Button text="Load Value" />
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="MAR"/>
