                <TextField style="-fx-pref-width: 30px"/>
            </VBox>
            <VBox>
                <Label text="Value" />
                <TextField style="-fx-pref-width: 30px"/>
            </VBox>
            <Button text="Load Value" alignment="BASELINE_RIGHT"/>
        </HBox>


        <children>
            <ListView fx:id="memoryListView">
